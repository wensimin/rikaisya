<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/floatViewBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <com.github.wensimin.rikaisya.view.AlwaysFocusTextView
            android:maxLines="6"
            android:scrollbars="vertical"
            android:id="@+id/sourceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/floatViewText"/>

        <Switch
            android:id="@+id/transitionSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/autoTransitionSwitch"
            android:textAlignment="viewEnd"
            android:textColor="@color/floatViewText"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <com.github.wensimin.rikaisya.view.AlwaysFocusTextView
            android:maxLines="6"
            android:scrollbars="vertical"
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/floatViewText"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="45"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="@color/floatViewText" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="45"
                android:gravity="center"
                android:text="@string/quit"
                android:textColor="@color/floatViewText" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>